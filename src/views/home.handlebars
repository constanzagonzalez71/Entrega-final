<div>
    <h1>Home Page</h1>
    <h2>Lista de productos</h2>
    <ul>
    {{#each products}}
        <li>
            <h2>{{this.title}}</h2>
            <h3>Price: {{this.price}}</h3>
            <p>Description: {{this.description}}</p>
            <p>Stock: {{this.stock}}</p>
        </li>
    {{/each}}

    {{#whith user}}
    <h2>{{username}}</h2>
   
   {{#if isAdmin}}
        <h3>Permiso de Administrador</h3>
    {{else}}
        <p>No tienes permisos de administrador </p>
    {{/if}}

    {{/whith}}
    </ul>
</div>